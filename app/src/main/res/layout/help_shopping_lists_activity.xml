<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/add_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/help_create_new_list" />

            <ImageView
                android:id="@+id/add_button_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/add_button" />

            <TextView
                android:id="@+id/add_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/help_enter_list_name" />

            <ImageView
                android:id="@+id/add_list_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/help_image_margin_right"
                android:layout_marginRight="@dimen/help_image_margin_right"
                android:src="@drawable/add_list" />

            <TextView
                android:id="@+id/add_list_long_click_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/help_fill_list_name" />

            <ImageView
                android:id="@+id/add_list_long_click_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/help_image_margin_right"
                android:layout_marginRight="@dimen/help_image_margin_right"
                android:src="@drawable/add_list_long_click" />

            <TextView
                android:id="@+id/select_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/help_short_and_long_tap_to_select_item" />

            <ImageView
                android:id="@+id/todo_select_list_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/help_image_margin_right"
                android:layout_marginRight="@dimen/help_image_margin_right"
                android:src="@drawable/shopping_list_select_item" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>