<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.justplay1.shoppist">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ShoppingList.AppTheme">

        <activity
            android:name=".view.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activities.SearchActivity"
            android:label="@string/search"
            android:screenOrientation="portrait"
            android:theme="@style/ShoppingList.noAnimTheme"/>

        <activity
            android:name=".view.activities.CurrencyActivity"
            android:label="@string/currency"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".view.activities.UnitsActivity"
            android:label="@string/units"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".view.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".view.activities.CategoriesActivity"
            android:label="@string/title_activity_category"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".view.activities.ListItemActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".view.activities.AddElementActivity"
            android:label="@string/title_activity_add_list"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".view.activities.GoodsActivity"
            android:label="@string/goods"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>
